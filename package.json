{
    "private": true,
    "name": "desc",
    "workspaces": [
        "packages/api",
        "packages/app"
    ],
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "clean": "lerna clean",
        "dev": "lerna run dev --stream",
        "dev:api": "lerna run dev --stream --scope @desc/api",
        "dev:app": "lerna run start --stream --scope @desc/app",
        "lint": "lerna run lint --stream",
        "postinstall": "yarn bootstrap",
        "test:api": "lerna run test --stream --scope @desc/api",
        "test:api:unit": "lerna run test:unit --stream --scope @desc/api",
        "test:api:integration": "lerna run test:integration --stream --scope @desc/api",
        "test:api:acceptance": "lerna run test:acceptance --stream --scope @desc/api",
        "test:app:all": "lerna run test --stream --scope @desc/app -- --colors --watchAll=false",
        "test:app:watch": "lerna run test --stream --scope @desc/app -- --colors"
    },
    "license": "MIT",
    "devDependencies": {
        "lerna": "^3.16.1"
    },
    "engines": {
        "node": ">=10.16.0 <11.0.0",
        "yarn": ">=1.16.0"
    }
}
