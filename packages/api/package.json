{
    "name": "@desc/api",
    "version": "0.1.0",
    "description": "RESTful json API for the DESC simplify project",
    "main": "index.js",
    "scripts": {
        "prebuild": "yarn clean",
        "build": "babel src -d build --ignore *test.js",
        "clean": "rimraf build sessions test-sessions",
        "dev": "DEBUG=app,db* nodemon src/server.js --watch src/ --exec babel-node",
        "lint": "eslint src/**/*.js --max-warnings 0",
        "prestart": "yarn build",
        "start": "node build/server.js",
        "test": "yarn -s test:unit && yarn -s test:integration && yarn -s test:acceptance",
        "test:acceptance": "NODE_ENV=testing DEBUG=app,test,db:connection mocha --colors --exit src/utils/db-test-setup.js src/**/*.a-test.js --require @babel/register",
        "test:integration": "NODE_ENV=testing DEBUG=app,test,db:connection mocha --colors --exit src/utils/db-test-setup.js src/**/*.i-test.js --require @babel/register",
        "test:unit": "NODE_ENV=testing mocha --colors 'src/**/*.u-test.js' --require @babel/register",
        "test:e2e": "NODE_ENV=testing yarn dev",
        "posttest:acceptance": "rimraf test-sessions"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix --max-warnings 0",
            "git add"
        ]
    },
    "author": "Jason S. Jones",
    "license": "MIT",
    "dependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.2.2",
        "@babel/node": "^7.2.2",
        "@babel/preset-env": "^7.2.3",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.18.3",
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
        "debug": "^4.1.1",
        "dotenv": "8.0.0",
        "ejs": "^2.6.1",
        "express": "^4.16.4",
        "jsonwebtoken": "^8.3.0",
        "mongoose": "^5.4.4",
        "morgan": "^1.9.0",
        "passport": "^0.4.0",
        "passport-local": "^1.0.0",
        "rimraf": "^2.6.3"
    },
    "devDependencies": {
        "@babel/register": "^7.0.0",
        "babel-eslint": "^10.0.1",
        "chai": "^4.2.0",
        "eslint": "6.1.0",
        "eslint-config-prettier": "6.0.0",
        "eslint-plugin-prettier": "^3.0.1",
        "husky": "3.0.1",
        "lint-staged": "9.2.0",
        "mocha": "6.2.0",
        "nodemon": "^1.18.9",
        "prettier": "^1.15.3",
        "sinon": "^7.2.2",
        "sinon-mongoose": "^2.2.1",
        "supertest": "4.0.2"
    },
    "engines": {
        "node": ">=10.15.0 <11.0.0",
        "yarn": ">=1.16.0"
    }
}
