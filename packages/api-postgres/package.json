{
    "name": "@desc/api-postgres",
    "version": "0.1.0",
    "description": "RESTful json API for the DESC project written in typescript and backed by a postgres data store",
    "main": "index.js",
    "scripts": {
        "build": "tsc",
        "clean": "rm -rf dist coverage",
        "dev": "NODE_ENV=development ts-node-dev --respawn src/index.ts",
        "lint": "eslint src/**/*.ts",
        "test": "NODE_ENV=testing jest --color --runInBand"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix --max-warnings 0",
            "git add"
        ]
    },
    "author": "Jason S. Jones",
    "license": "MIT",
    "dependencies": {
        "@types/dotenv": "^8.2.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "morgan": "^1.10.0",
        "passport": "^0.4.1",
        "passport-local": "^1.0.0",
        "pg": "^7.18.2",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.2.22",
        "uuid": "^7.0.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/body-parser": "^1.19.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.6",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.2",
        "@types/jest": "^25.1.3",
        "@types/jsonwebtoken": "^8.3.8",
        "@types/morgan": "^1.9.0",
        "@types/passport": "^1.0.2",
        "@types/passport-local": "^1.0.33",
        "@types/supertest": "^2.0.8",
        "@types/uuid": "^7.0.0",
        "@typescript-eslint/eslint-plugin": "^2.19.2",
        "@typescript-eslint/parser": "^2.19.2",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-prettier": "^3.1.2",
        "jest": "^25.1.0",
        "prettier": "^1.19.1",
        "supertest": "^4.0.2",
        "ts-jest": "^25.2.0",
        "ts-node-dev": "^1.0.0-pre.44",
        "typescript": "^3.7.5"
    },
    "engines": {
        "node": ">=10.15.0 <11.0.0",
        "yarn": ">=1.16.0"
    }
}
