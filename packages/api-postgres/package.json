{
    "name": "@desc/api-postgres",
    "version": "0.1.0",
    "description": "RESTful json API for the DESC project written in typescript and backed by a postgres data store",
    "main": "index.js",
    "scripts": {
        "build": "tsc",
        "clean": "rm -rf dist coverage",
        "dev": "ts-node-dev --respawn src/index.ts",
        "lint": "eslint src/**/*.ts",
        "test": "NODE_ENV=testing jest --color --runInBand",
        "test:e2e": "NODE_ENV=testingE2E yarn dev"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix --max-warnings 0",
            "git add"
        ]
    },
    "author": "Jason S. Jones",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "morgan": "^1.10.0",
        "nodemailer": "6.4.11",
        "passport": "^0.4.1",
        "passport-local": "^1.0.0",
        "pg": "8.3.2",
        "reflect-metadata": "^0.1.13",
        "typeorm": "0.2.25",
        "uuid": "8.3.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/body-parser": "^1.19.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "2.8.7",
        "@types/dotenv": "^8.2.0",
        "@types/express": "4.17.7",
        "@types/jest": "26.0.10",
        "@types/jsonwebtoken": "8.5.0",
        "@types/morgan": "1.9.1",
        "@types/nodemailer": "^6.4.0",
        "@types/passport": "1.0.4",
        "@types/passport-local": "^1.0.33",
        "@types/supertest": "2.0.10",
        "@types/uuid": "8.3.0",
        "@typescript-eslint/eslint-plugin": "3.9.1",
        "@typescript-eslint/parser": "3.9.1",
        "eslint": "7.7.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "3.1.4",
        "jest": "26.4.1",
        "prettier": "^2.0.5",
        "supertest": "^4.0.2",
        "ts-jest": "26.2.0",
        "ts-node-dev": "1.0.0-pre.59",
        "typescript": "4.0.2"
    },
    "engines": {
        "node": ">=10.15.0 <13.0.0",
        "yarn": ">=1.16.0"
    }
}
